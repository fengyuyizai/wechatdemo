<!--index.wxml-->

<swiper
  autoplay="true" interval="{{banner.interval}}" duration="{{banner.duration}}">
  <block wx:for="{{banner.imgUrls}}" wx:key="{{index}}">
    <swiper-item>
      <image src="{{item}}" class="slide-image" width="355" height="150"/>
    </swiper-item>
  </block>
</swiper>

<view class='body'>
  <view class='body-header'>
    <view class="body-Hitem">
      <image src='../image/nav1.png' class='body-Hitem-img'></image>
      <text>钱包</text>
    </view>
    <view class="body-Hitem">
      <image src='../image/nav2.png' class='body-Hitem-img'></image>
      <text>外卖</text>
    </view>
    <view class="body-Hitem">
      <image src='../image/nav3.png' class='body-Hitem-img'></image>
      <text>打印</text>
    </view>
    <view class="body-Hitem">
      <image src='../image/nav4.png' class='body-Hitem-img'></image>
      <text>美食</text>
    </view>
    <view class="body-Hitem">
      <image src='../image/nav5.png' class='body-Hitem-img'></image>
      <text>设置</text>
    </view>
  </view>
  <view class='body-session'>
  <text class='body-session-title'>热点文章</text>
