    <block wx:for="{{article}}" wx:key="{{index}}">
      <view class='body-session-item'>
        <navigator open-type="navigate" url="../article/article?code={{item.code}}">
          <text class='title'>{{item.title}}</text>
          <view class='article'>
            <image src='{{item.imgUrl}}' mode="center"></image>
            <text class='message'>{{item.message}}</text>
          </view>
        </navigator>
    </view>
    </block>
  </view>
</view>
